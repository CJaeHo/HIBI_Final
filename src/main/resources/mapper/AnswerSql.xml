<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hibi.mapper.AnswerMapperInter">
	<insert id="insertAnswer" parameterType="comment">
		insert into Comment (commentTitle,likeCount,productIdx,userIdx,firstPhoto) values (
			#{commentTitle},#{likeCount},#{productIdx},#{userIdx},#{firstPhoto})
	</insert>
	<select id="getAnswerList" parameterType="Long" resultType="comment">
		select * from Comment where productIdx=#{productIdx} order by createAt desc
	</select>	
	<delete id="deleteAnswer" parameterType="Long">
		delete from Comment where commentIdx=#{commentIdx}
	</delete>	
</mapper>